<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:gravity="center|start"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_whatsapp"
            android:layout_width="@dimen/social_media_icon_size"
            android:layout_height="@dimen/social_media_icon_size"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/nav_instagram"
            android:layout_width="@dimen/social_media_icon_size"
            android:layout_height="@dimen/social_media_icon_size"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_instagram" />

        <ImageView
            android:id="@+id/nav_facebook"
            android:layout_width="@dimen/social_media_icon_size"
            android:layout_height="@dimen/social_media_icon_size"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/nav_youtube"
            android:layout_width="@dimen/social_media_icon_size"
            android:layout_height="@dimen/social_media_icon_size"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_youtube" />

        <ImageView
                android:id="@+id/nav_gmail"
                android:layout_width="@dimen/social_media_icon_size"
                android:layout_height="@dimen/social_media_icon_size"
                android:src="@drawable/ic_gmail" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Connect with social media"
        android:textColor="@color/colorText"
        android:textSize="14sp" />
</LinearLayout>