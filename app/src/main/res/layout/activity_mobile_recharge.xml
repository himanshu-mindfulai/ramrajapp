<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.mindfulai.kwikapi.MobileRechargeActivity">

    <LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/number_title"
              android:text="Mobile Number"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter number"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content"
              android:text="Select Operator"
              android:id="@+id/operator_title"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/spinner_operator"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:popupBackground="@color/colorWhite"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="Select Circle"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/spinner_circle"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:popupBackground="@color/colorWhite"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:text="Amount"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter recharge amount"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:text="Wallet Balance"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_wallet_balance"
                  android:text="Rs.0"
                  android:textColor="@color/colorPrimaryDark"
                  android:textSize="17sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:id="@+id/recharge_btn"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Recharge"
            android:textColor="@color/colorWhite"
            android:background="@drawable/border_btn_selected_subcategory"
            android:layout_height="wrap_content"/>

    <HorizontalScrollView android:layout_width="match_parent"
                          android:id="@+id/horizontalScrollView"
                          android:visibility="gone"
                          android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:background="@color/colorWhite"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="15dp"
                      android:layout_marginStart="10dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="FULLTT"
                      android:textSize="16sp"
                      android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:id="@+id/fulltt"
                      android:background="@drawable/vendor_cat_background"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="TOPUP"
                      android:id="@+id/topup"
                      android:layout_marginStart="10dp"
                      android:textSize="16sp"
                      android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:background="@drawable/vendor_cat_background"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="DATA"
                      android:textSize="16sp"
                      android:id="@+id/data"
                      android:layout_marginStart="10dp"
                      android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:background="@drawable/vendor_cat_background"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="SMS"
                      android:textSize="16sp"
                      android:id="@+id/sms"
                      android:layout_marginStart="10dp"
                      android:textColor="@color/colorBlack"
                      android:padding="10dp"
                      android:background="@drawable/vendor_cat_background"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="Romaing"
                      android:textSize="16sp"
                      android:id="@+id/roaming"
                      android:layout_marginStart="10dp"
                      android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:background="@drawable/vendor_cat_background"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="FRC"
                      android:textSize="16sp"
                      android:id="@+id/frc"
                      android:layout_marginStart="10dp"
                      android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:background="@drawable/vendor_cat_background"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="STV"
                      android:textSize="16sp"
                      android:paddingStart="10dp"
                      android:paddingEnd="15dp"
                      android:id="@+id/stv"
                      android:background="@drawable/vendor_cat_background"
                      android:layout_marginStart="10dp"
                      android:textColor="@color/colorBlack"
                      android:layout_height="wrap_content"/>

        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_plans"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>