<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.mindfulai.kwikapi.MobileRechargeActivity">
    <TextView android:layout_width="wrap_content"
              android:id="@+id/number_title"
              android:text="Mobile Number"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter number"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content"
              android:text="Select Operator"
              android:id="@+id/operator_title"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/spinner_operator"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:popupBackground="@color/colorWhite"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/error_msg"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:visibility="gone"
              android:textColor="@color/colorBlack"
              android:background="@color/colorAdd"
              android:text="Error message: Bill fetch not supported pay Amount direct"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="Number"
              android:id="@+id/account_title"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter number"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content"
              android:text="Opt"
              android:id="@+id/opt_title"
              android:layout_marginTop="20dp"
              android:layout_marginStart="15dp"
              android:visibility="gone"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_opt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter opt"
            android:padding="15dp"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold"/>
    <TextView android:layout_width="wrap_content"
              android:text="Amount"
              android:id="@+id/amnt_title"
              android:layout_marginTop="20dp"
              android:visibility="gone"
              android:layout_marginStart="15dp"
              android:textColor="@color/colorBlack"
              android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@drawable/border_btn_unselected"
            android:gravity="center|start"
            android:hint="Enter recharge amount"
            android:inputType="phone"
            android:padding="15dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:text="Wallet Balance"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_wallet_balance"
                  android:text="Rs.0"
                  android:textColor="@color/colorPrimaryDark"
                  android:textSize="17sp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:id="@+id/recharge_btn"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Fetch bill"
            android:textColor="@color/colorWhite"
            android:background="@drawable/border_btn_selected_subcategory"
            android:layout_height="wrap_content"/>

</LinearLayout>